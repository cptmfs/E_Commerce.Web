@model IEnumerable<E_Commerce.MvcWebUI2.ViewModel.ProductViewModel>
@{
    ViewData["Title"] = "List";
}
<div class="container pb-5 mt-3">

    <div class="row">
        <div class="col-md-3">
            @Html.Action("GetCategories", "Home")
        </div>
        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-circle-fill"></i>
                    Bu kategoriye ait bir ürün bulunamadı
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    Bu kategoriye ait <strong>@Model.Count() adet </strong> ürün bulundu.
                </div>
            }
            @Html.Partial("_ProductListPartialView", Model)
        </div>
    </div>
</div>


