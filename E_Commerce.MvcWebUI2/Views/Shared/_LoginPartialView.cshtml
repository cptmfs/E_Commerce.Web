<ul class="navbar-nav my-2 my-lg-0">

    @if (Request.IsAuthenticated)
    {
        // kullanıcı adını ve logout linklerini çıkar

        <li class="nav-item">
            <a class="btn btn-outline-success me-2" href="/Account/Index">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-danger" href="/Account/Logout">Logout</a>
        </li>
    }
    else
    {
        // login ve register linklerini çıkar.
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2"  href="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-warning"  href="/Account/Register">Register</a>
        </li>
    }

</ul>